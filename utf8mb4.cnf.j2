# Taken from https://stackoverflow.com/questions/23786359/laravel-migration-unique-key-is-too-long-even-if-specified/39750202#39750202
# You will still need to set your engine to "InnoDB ROW_FORMAT=DYNAMIC" to avoid the "max key length is 767 bytes" error,
# even for Laravel 5.4+. This behavior becomes the default as of mySQL 5.7/mariadb 10.2, as do the alterations this file makes.

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4

[mysqld]
# default character set and collation
collation-server = utf8mb4_unicode_ci
character-set-server = utf8mb4

# utf8mb4 long key index
innodb_large_prefix = 1
innodb_file_format = barracuda
innodb_file_format_max = barracuda
innodb_file_per_table = 1
